{
  "name": "fullstack-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "npm-run-all --parallel start:frontend start:backend",
    "start:frontend": "npm run start --prefix frontend",
    "start:backend": "npm run start --prefix backend",
    "build": "npm-run-all --parallel build:frontend build:backend",
    "build:frontend": "npm run build --prefix frontend",
    "build:backend": "echo \"Backend does not require a build step\""
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}